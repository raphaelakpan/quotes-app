<div class="quotes">
  <h1 class="quotes__heading">Quotes</h1>
  <% if params[:query].present? %>
    <div class="quotes__search_result">
      Showing search results for <strong>"<%= params[:query] %>"</strong>
    </div>
  <% end %>
  <div class="quotes__container">
    <% @quotes.each do |quote| %>
      <div class="quotes__quote">
        <div class="quote__content">
          <%= quote.content %>
        </div>
        <div class="quote__author">
          - <%= quote.author.name %>
        </div>
        <%= image_tag  "quote_start.svg", class: "quote__start_icon" %>
        <%= image_tag  "quote_end.svg", class: "quote__end_icon" %>
      </div>
    <% end %>
    <% if @quotes.empty? %>
      <div class="quotes__quote quotes__quote--none">
         <h2> No quotes found </h2>
        <%= image_tag  "quote_start.svg", class: "quote__start_icon" %>
        <%= image_tag  "quote_end.svg", class: "quote__end_icon" %>
      </div>
    <% end %>
  </div>

  <div class="quotes__add_button">
    <%= image_tag  "add_icon.svg" %>
  </div>

  <%= render  "quotes/add_quote_modal" %>
</div>
