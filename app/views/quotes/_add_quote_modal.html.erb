<div class="add_quote_modal">
  <div class="add_quote_modal__overlay"></div>
  <div class="add_quote_modal__modal">
    <div class="modal__header">
      <div>Add Quotes</div>
      <span class="modal__close_button">
        <%= image_tag  "cancel_icon.svg" %>
      </span>
    </div>
    <form class="modal__body form">
      <div class="quote__error"></div>
      <textarea name="" class="quote__content_input" cols="30" rows="10" placeholder="Content" required></textarea>
      <input type="text" class="quote__author_input" placeholder="Author" required>
      <button class="quote__submit_button" type="submit" >Add now</button>
    </form>
  </div>
</div>
